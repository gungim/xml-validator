generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x", "rhel-openssl-1.0.x"]
}

datasource db {
  provider  = "postgresql"
  url       = env("PRISMA_DATABASE_URL")
  directUrl = env("PRISMA__POSTGRES_URL")
}

model Workspace {
  id              String           @id @default(cuid())
  name            String
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  projects        Project[]
  globalRules     GlobalRule[]
  userPermissions UserPermission[]
}

model Project {
  id             String    @id @default(cuid())
  name           String
  description    String?
  endpointSlug   String    @unique @default(uuid())
  endpointSecret String    @default(uuid())
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  workspaceId    String
  workspace      Workspace @relation(fields: [workspaceId], references: [id])
  rules          Rule[]
}

model Rule {
  id          Int      @id @default(autoincrement())
  condition   Json
  createdAt   DateTime @default(now())
  dataType    DataType
  description String?
  name        String
  path        String
  projectId   String
  required    Boolean
  parentId    Int?
  globalRuleId Int?
  
  parent      Rule?       @relation("RuleHierarchy", fields: [parentId], references: [id], onDelete: Cascade)
  children    Rule[]      @relation("RuleHierarchy")
  project     Project     @relation(fields: [projectId], references: [id])
  globalRule  GlobalRule? @relation("GlobalRuleApplication", fields: [globalRuleId], references: [id], onDelete: SetNull)
}

model GlobalRule {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  dataType    DataType
  condition   Json
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  workspaceId String
  parentId    Int?
  
  workspace    Workspace    @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  appliedRules Rule[]       @relation("GlobalRuleApplication")
  parent       GlobalRule?  @relation("GlobalRuleHierarchy", fields: [parentId], references: [id], onDelete: Cascade)
  children     GlobalRule[] @relation("GlobalRuleHierarchy")
}


enum DataType {
  string
  number
  boolean
  object
  array
}

model User {
  id          String           @id @default(cuid())
  name        String
  email       String           @unique
  password    String
  role        Role             @default(USER)
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
  permissions UserPermission[]
}

model UserPermission {
  id          String     @id @default(cuid())
  userId      String
  workspaceId String
  permission  Permission
  createdAt   DateTime   @default(now())
  
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  
  @@unique([userId, workspaceId])
}

enum Role {
  ADMIN
  USER
}

enum Permission {
  READ
  EDIT
}
